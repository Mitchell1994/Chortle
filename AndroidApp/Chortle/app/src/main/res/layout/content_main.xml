<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.chortle.chortle.MainActivity"
    tools:showIn="@layout/app_bar_main">


    <TextView
        android:id="@+id/ip_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose IP"/>

    <RadioGroup
        android:id="@+id/ip_selector"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/ip_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true">
        <RadioButton android:id="@+id/radio_mitchell"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mitchell"/>
        <RadioButton android:id="@+id/radio_conor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conor" />
        <RadioButton android:id="@+id/radio_gianni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gianni" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/username_button_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ip_selector"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:hint="Email"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/email_button_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_button_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:hint="Username"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">
            <Button
                android:id="@+id/add_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add User"
                android:singleLine="true"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/log_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="\nLog\n------------"
        android:layout_below="@+id/email_button_layout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/output"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/log_label"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars = "vertical"
        android:gravity="bottom"/>

</RelativeLayout>
